<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="186.67dp"
        android:layout_marginTop="6.67dp"
        android:layout_marginLeft="6.67dp"
        android:layout_marginRight="6.67dp"
        fresco:placeholderImage="@color/black"
        fresco:roundedCornerRadius="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="6.67dp"
        android:layout_marginRight="6.67dp"
        android:background="@android:color/white"
        android:alpha="0.8" >

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:drawableLeft="@drawable/dot"
            android:textSize="@dimen/font_01" />
    </RelativeLayout>

</RelativeLayout>